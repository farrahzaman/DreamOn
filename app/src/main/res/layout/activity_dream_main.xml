<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DreamMainActivity"
    android:background="@android:color/white">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Journal"
        android:id="@+id/homeJournalButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"
        android:background="#ffffb854"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inspiration"
        android:id="@+id/homeInspireButton"
        android:layout_toEndOf="@+id/homeJournalButton"
        android:background="#ffffb854"
        android:elegantTextHeight="false"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/homeJournalButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Community"
        android:id="@+id/homeCommButton"
        android:layout_toEndOf="@+id/homeInspireButton"
        android:textColor="#ffffffff"
        android:background="#ffffb854"
        android:layout_toStartOf="@+id/buttonFaves"
        android:layout_alignTop="@+id/homeJournalButton"
        android:layout_toLeftOf="@+id/buttonFaves" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dream on Dreamer"
        android:id="@+id/textSearchDream"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/homeJournalButton"
        android:layout_toEndOf="@+id/homeJournalButton"
        android:textSize="35sp"
        android:textColor="#FFA5A5A5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Building a Community of Dreamers"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:layout_above="@+id/homeJournalButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cloudicon"
        android:id="@+id/imageView"
        android:layout_above="@+id/textSearchDream"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favourites"
        android:id="@+id/buttonFaves"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textSearchDream"
        android:layout_alignEnd="@+id/textSearchDream"
        android:textColor="#ffffffff"
        android:background="#ffffb854" />

</RelativeLayout>
