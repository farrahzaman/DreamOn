<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="farrahzaman.dreamon.InspirationActivity"
    android:id="@+id/unique">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photos and Quotes"
        android:id="@+id/buttonPhotosQuotes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media"
        android:id="@+id/buttonMedia"
        android:layout_toEndOf="@+id/buttonPhotosQuotes"
        android:layout_alignTop="@+id/buttonPhotosQuotes"
        android:layout_toRightOf="@+id/buttonPhotosQuotes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guidance"
        android:id="@+id/buttonGuidance"
        android:layout_alignBottom="@+id/buttonMedia"
        android:layout_toRightOf="@+id/buttonMedia"
        android:layout_toEndOf="@+id/buttonMedia" />

</RelativeLayout>
